<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>local.mbsync</string>
    <key>ProgramArguments</key>
    <array>
      <string>/home/user/.local/bin/syncmail.sh</string>
    </array>
    <key>EnvironmentVariables</key>
    <dict>
      <key>PATH</key>
      <string>/bin:/usr/bin:/usr/local/bin:/home/user/.local/bin</string>
    </dict>
    <key>StartInterval</key>
    <integer>300</integer>
    <key>ExitTimeOut</key>
    <integer>0</integer>
    <key>ProcessType</key>
    <string>Interactive</string>
  </dict>
</plist>
